{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "pretty": true,
    "strict": true,
    "declaration": true,
    "preserveWatchOutput": true,
    "noUnusedLocals": true,
    "target": "es5",
    "module": "es6",
    "downlevelIteration": true,
    "lib": ["dom", "es6"],
    "rootDir": "./",
    "outDir": "./build"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
